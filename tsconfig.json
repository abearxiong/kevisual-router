{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "esnext",
    "noImplicitAny": false,
    "outDir": "./dist",
    "sourceMap": false,
    "allowJs": true,
    "newLine": "LF",
    "baseUrl": "./",
    "typeRoots": [
      "node_modules/@types",
    ],
    "declaration": false,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "moduleResolution": "NodeNext",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "paths": {
      "@/*": [
        "src/*"
      ],
    }
  },
  "include": [
    "src/**/*.ts",
    "mod.ts"
  ],
  "exclude": [
    "node_modules",
    "rollup.config.js",
  ]
}